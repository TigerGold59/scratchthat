{

    "manifest_version": 2,
    "name": "Scratch That",
    "version": "1.0.0",

    "description": "Allows you to set filters which replace all instances of text on webpages.",

    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["replace.js"],
        "run_at": "document_start"
      }
    ],
    "permissions": [
      "storage"
    ],
    "browser_action": {
      "default_icon": "",
      "default_title": "Scratch That",
      "default_popup": "popup/index.html",
      "browser_style": true
    }
  }
